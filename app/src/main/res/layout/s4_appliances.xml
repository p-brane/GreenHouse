<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.p_brane.greenhouse.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/section4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/headerTheme"
                android:text="@string/header4Appliances" />

            <ImageView
                style="@style/photoTheme"
                android:scaleType="fitCenter"
                android:src="@drawable/washer_dryer2" />

            <ImageView
                style="@style/photoTheme"
                android:scaleType="fitCenter"
                android:paddingLeft="8dp"
                android:src="@drawable/dishwasher3" />

            <TextView
                style="@style/bodyTextTheme"
                android:text="@string/t4ApplianceText" />

            <TextView
                android:id="@+id/s4Notes"
                style="@style/notesTextTheme"
                android:text="@string/blankText" />

            <TextView
                android:id="@+id/s4Refs"
                style="@style/refTextTheme"
                android:text="@string/blankText" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/section4">

            <Button
                android:id="@+id/b4Back"
                style="@style/buttonTheme"
                android:layout_alignParentLeft="true"
                android:text="@string/buttonBack"
                android:onClick="openPage3"/>

            <Button
                android:id="@+id/b4Next"
                style="@style/buttonTheme"
                android:layout_alignParentRight="true"
                android:text="@string/buttonNext"
                android:onClick="openPage5"/>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
